  <form accept-charset="UTF-8" action="<%= survey_questions_path(@survey) %>" method="post">

    <input name="utf8" type="hidden" value="&#x2713;" />
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <label>How many options should the question have?
      <select name="multiple_choice_questions[num_options]">
        <% 4.times do |i| %>
          <option value="<%= i + 2 %>"><%= i + 2 %></option>
        <% end %>
      </select>
    </label>

    <label>Can more than one option be selected?
      <input type="checkbox" name="multiple_choice_questions[multiple]">
    </label>

    <label>Is the question required?
      <input type="checkbox" name="questions[required]">
    </label>

    <button type="submit">Continue to the Next Step</button>

  </form>